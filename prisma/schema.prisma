model Member {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  group     Group
  activities Activity[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("members")
}

model Activity {
  id        String   @id @default(uuid())
  name      String
  date      DateTime @default(now())
  members   Member[]
  group     Group
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("activities")
}

enum Group {
  KAPOENEN
  WOUTERS
  JONGGIVERS
  GIVERS
  JINS
  UNKNOWN
}