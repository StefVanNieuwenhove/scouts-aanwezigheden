generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Member {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  group     Group
  activities Activity[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("members")
}

model Activity {
  id        String   @id @default(uuid())
  name      String
  Date      DateTime
  members   Member[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("activities")
}

enum Group {
  KAPOENEN
  WOUTERS
  JONGGIVERS
  GIVERS
  JINS
}